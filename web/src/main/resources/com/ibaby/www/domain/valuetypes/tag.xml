<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Tag">

	<typeAlias alias="tag" type="com.ibaby.www.domain.valuetypes.Tag" />
    <typeAlias alias="qp" type="com.ibaby.www.dao.QueryParams" />

	<parameterMap class="tag" id="tag_without_id">
		<parameter property="name" javaType="string" jdbcType="varchar" />
		<parameter property="description" javaType="string" jdbcType="varchar" />
		<parameter property="kind" javaType="string" jdbcType="varchar" />
		<parameter property="parent_id" javaType="integer" jdbcType="number" />
	</parameterMap>
	<sql id="byTagIdCondition">
		<![CDATA[
		   id = #id:NUMBER#
	    ]]>
	</sql>

	<insert id="save" parameterMap="tag_without_id">
		<![CDATA[
			insert into tb_tags (name, description, kind, parent_id, created_at, updated_at)
      values (?, ?, 'default', 0, now(), now())
		]]>
		<selectKey resultClass="int">
			<![CDATA[
				SELECT @@IDENTITY AS ID
			]]>
		</selectKey>
	</insert>

	<delete id="deleteById" parameterClass="Integer">
		<![CDATA[
			delete tb_tags where id=#id#
		]]>
	</delete>

	<select id="findAllTags" parameterClass="qp" resultClass="tag">
		<![CDATA[
		  select * from tb_tags order by id desc limit $limit$
		]]>
	</select>
	<update id="updateTag" parameterClass="tag">
		<![CDATA[
			update tb_tags
		]]>
		<dynamic prepend="set">
			<isNotNull property="name" prepend=",">
				<![CDATA[
					name = #name:VARCHAR#
				]]>
			</isNotNull>
			<isNotNull property="description" prepend=",">
				<![CDATA[
					description = #description:VARCHAR#
				]]>
			</isNotNull>
		</dynamic>
		<dynamic prepend="WHERE">
			<![CDATA[
				id = #id:NUMBER#
			]]>
		</dynamic>
	</update>
	
</sqlMap>
